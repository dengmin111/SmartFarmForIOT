<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hasee.smartfarmforiot.activity.FarmXqActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id_farm"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="农场编号"
                android:textColor="#ffffff"
                android:background="#0071da"
                android:textSize="20sp"
                android:padding="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/rounded_corner">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="更新时间:"
                        android:textSize="22dp"
                        android:textColor="@color/TextColor"/>
                    <TextView
                        android:id="@+id/update_tiem"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="10:38"
                        android:textSize="22dp"
                        android:textColor="@color/TextColor"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#666666"
                    android:layout_marginVertical="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@mipmap/temp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="温度:"
                        android:textSize="18dp"
                        android:textColor="@color/TextColor"/>
                    <TextView
                        android:id="@+id/temperature"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="21℃"
                        android:textSize="18dp"
                        android:textColor="@color/TextColor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@mipmap/humi"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="湿度:"
                        android:textSize="18dp"
                        android:textColor="@color/TextColor"/>
                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="10:38"
                        android:textSize="18dp"
                        android:textColor="@color/TextColor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@mipmap/sun"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="光照:"
                        android:textSize="18dp"
                        android:textColor="@color/TextColor"/>
                    <TextView
                        android:id="@+id/light"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textSize="18dp"
                        android:textColor="@color/TextColor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@mipmap/rain"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="天气:"
                        android:textSize="18dp"
                        android:textColor="@color/TextColor"/>
                    <TextView
                        android:id="@+id/wether"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="晴"
                        android:textSize="18dp"
                        android:textColor="@color/TextColor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="机器状态:"
                        android:textSize="22sp"
                        android:textColor="@color/TextColor"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/lamp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_gary"
                            android:text="灯"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/TextColol2"
                            />
                        <TextView
                            android:id="@+id/ventilator"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_gary"
                            android:text="通风"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:textColor="@color/TextColol2"
                            />
                        <TextView
                            android:id="@+id/draw_water"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_gary"
                            android:text="抽水"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/TextColol2"
                            />
                        <TextView
                            android:id="@+id/watering"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corner_gary"
                            android:text="灌水"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/TextColol2"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:text = "历史纪录:"
                            android:textSize="22sp"
                            android:textColor="@color/TextColor1"/>
                    </LinearLayout>

                </LinearLayout>
                <com.example.hasee.smartfarmforiot.util.MyLineChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/aaa"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_yellow"
                        android:text="光照"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/TextColol2"
                        />
                    <TextView
                        android:id="@+id/two"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_gary"
                        android:text="温度"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:textColor="@color/TextColol2"
                        />
                    <TextView
                        android:id="@+id/three"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_corner_gary"
                        android:text="湿度"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:padding="4dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/TextColol2"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
